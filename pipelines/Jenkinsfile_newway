def myscripts

pipeline {
agent { 
        node {
            label 'ansible'
        }
    }
    stages {
        stage('Init') {  
            steps {
                script{
                    myscripts = load "pipelines/scripts/newway.groovy"
                }
            }
        }
        stage('Setup Params') {  
            steps {
               script {
                    myscripts.setupParams()
               }
            }
        }
        stage('Plan') {  
            steps {
               script {
                    myscripts.planApp()
               }
            }
        }
        stage('Test') {
            steps {
               script {
                    myscripts.testApp()
               }
            }
        }
        stage('Deploy') {  
            steps {
               script {
                    myscripts.deployApp()
               }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}