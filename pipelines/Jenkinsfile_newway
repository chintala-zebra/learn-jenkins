def utilities
def env_params
def myscripts

pipeline {
agent { 
        node {
            label 'ansible'
        }
    }
    stages {
        stage('Init') {
            steps {
                script{
                    utilities = load "pipelines/libraries/utilities.groovy"
                    env_params = load "pipelines/libraries/env_params.groovy"
                    myscripts = load "pipelines/scripts/newway.groovy"
                }
            }
        }
        stage('Setup Params') {  
            steps {
               script {
                    myscripts.setupParams()
               }
            }
        }
        stage('Validate') {
            steps {
               script {
                    myscripts.validate()
               }
            }
        }
        stage('Execute Job') {
            steps {
               script {
                    myscripts.testApp()
               }
            }
        }
    }
    post {
        success {
            script{
                utilities.processSuccess()
            }
        }
        failure {
            script{
                utilities.notifyMiddleware()
            }
        }
        cleanup {
            script{
                utilities.processCleanup()
            }
        }
    }
}