def myscripts
def env_params
pipeline {
    agent { 
        node {
            label 'ansible'
        }
    }
    options {
        ansiColor('xterm')
    }
    stages {
        stage('Init') {  
            steps {
                script{
                    env_params = load "pipelines/libraries/env_params.groovy"
                    myscripts = load "pipelines/Middleware_Maintenance.groovy"
                }
            }
        }
        stage('Setup Params') {  
            steps {
               script {
                    env_params.addInventoryParamsUptoApplication()
                    myscripts.setupParams()
               }
            }
        }
        stage('Validate') {
            steps {
                script{
                    myscripts.validateParams()
                }
            }
        }
        stage('Execute Job') {
            steps {
                script{
                    myscripts.executeJob()
                }
            }
        }
    }

    post {
        always {
            env_params.performPostActions()
        }
    }
}

