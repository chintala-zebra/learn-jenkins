def myscripts
def env_params
def post_actions
pipeline {
    agent { 
        node {
            label 'ansible'
        }
    }
    options {
        ansiColor('xterm')
    }
    stages {
        stage('Init') {  
            steps {
                script{
                    env_params = load "pipelines/libraries/env_params.groovy"
                    myscripts = load "pipelines/Middleware_Maintenance.groovy"
                    post_actions = load "pipelines/libraries/post_actions.groovy"
                }
            }
        }
        stage('Setup Params') {  
            steps {
               script {
                    env_params.addInventoryParamsUptoApplication()
                    myscripts.setupParams()
               }
            }
        }
        stage('Validate') {
            steps {
                script{
                    myscripts.validateParams()
                }
            }
        }
        stage('Execute Job') {
            steps {
                script{
                    myscripts.executeJob()
                }
            }
        }
    }

    post {
        failure {
            script{
                post_actions.performAlways()
            }
        }
        cleanup {
            script{
                post_actions.performCleanup()
            }
        }
    }
}

