@Library('middleware-library')_
import org.zebra.Hello

properties([
    parameters([
        [
            name: 'ENVIRONMENT',
            $class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            script: [
                $class: 'GroovyScript',
                sandbox: 'true',
                classpath: [],
                script: [
                    script: '''
                    def list = []
                    //list = listFolders('GCP-Sandbox')
                    //return list
                    def hello = new Hello()
                    def name = hello.printHello("Chintala")
                    return [name]
                    '''
                ]
            ]
        ]
    ])
])
pipeline {
    agent any
    options {
        ansiColor('xterm')
    }
    stages {
        stage('Print the Values') {
            steps {
                script {
                    
                    log.info('Starting')
                    sayHello('Dave')
                    log.warning('Nothing')
                    log.error('Failed!')
                    listFolders 'GCP-Sandbox'
                    def hello = new Hello()
                    log.info(hello.printHello("Chintala"))
                }
            }
        }
    }
}