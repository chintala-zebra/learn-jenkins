pipeline {
  agent any
  parameters {
    base64File 'THEFILE'
  }
  stages {
    stage('Example') {
      steps {
        withFileParameter('THEFILE') {
          sh """
          echo $THEFILE
          echo $target_file
          cp $THEFILE $target_file
          ls
          cat $target_file
          """
        }
      }
    }
  }
}