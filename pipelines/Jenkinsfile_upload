def myscripts

pipeline {
    agent any
    parameters {
        base64File 'file'
        string( name: 'target_file_path', 
                description: """
                Path to where the file needs copied - <b> Must Include the file name </b>
                <br> Ex: /mount/test_folder/abcd.xml'
                """)
        string(name: 'host_name', description: 'Host to which the file Needs Copied')
    }
    stages {
        stage('Init') {  
            steps {
                script{
                    myscripts = load "pipelines/upload.groovy"
                }
            }
        }
         stage('Show Conent') {
            steps {
                script{
                    myscripts.showContent()
                }
            }
        }
        stage('Approval') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    input "Do you approve the copy of file to $host_name @ path $target_file_path?"
                }
            }
        }
        stage('copy file') {
            steps {
                script{
                    sh '''
                        set +x
                        
                        echo $ANSIBLE_VAULT > .mysecret
                        export ANSIBLE_VAULT_PASSWORD_FILE=.mysecret
                        ansible-vault decrypt appadmin-key
                        echo "removed the key" > .mysecret
                    
                        set +x
                        scp -o 'StrictHostKeyChecking no' -i appadmin-key file1 $host_name:$target_file_path
                    '''
                }
                script{
                    log.info("Copy of file to Host : ${host_name} @ Path : ${target_file_path} is successful!")
                }
            }
        }
    }

}