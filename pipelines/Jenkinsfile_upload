def utilities
def env_params
def myscripts

pipeline {
    options {
        buildDiscarder(logRotator(daysToKeepStr: '30'))
        ansiColor('xterm')
    }
    agent { 
        node {
            label 'ansible'
        }
    }
    stages {
        stage('Init') {
            steps {
                script{
                    utilities = load "pipelines/libraries/utilities.groovy"
                    env_params = load "pipelines/libraries/env_params.groovy"
                    myscripts = load "pipelines/scripts/upload.groovy"
                }
            }
        }
        stage('Setup Params') {  
            steps {
               script {
                    echo "$JOB_NAME"
                    echo "$JOB_BASE_NAME"
                    env_params.addInventoryParamsUptoHost("$JOB_BASE_NAME")
                    myscripts.setupParams()
               }
            }
        }
        stage('Validate') {
            steps {
                script{
                    myscripts.validateParams()
                    myscripts.validateOptionalParams()
                }
            }
        }
        stage('Execute Job') {
            environment {
                ANSIBLE_VALUT= credentials('MID_ANSIBLE_VAULT')
            }
            steps {
                script{
                    myscripts.showContent()
                    myscripts.copyFile()
                }
            }
        }
    }
    post {
        success {
            script{
                utilities.processSuccess()
            }
        }
        failure {
            script{
                utilities.notifyMiddleware()
            }
        }
        cleanup {
            script{
                utilities.processCleanup()
            }
        }
    }
}

