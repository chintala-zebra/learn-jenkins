def myscripts
def env_params
pipeline {
    agent { 
        node {
            label 'ansible'
        }
    }
    options {
        ansiColor('xterm')
    }
    environment {
        ANSIBLE_VALUT= credentials('MID_ANSIBLE_VAULT')
    }
    stages {
        stage('Init') {  
            steps {
                script{
                    env_params = load "pipelines/libraries/env_params.groovy"
                    myscripts = load "pipelines/upload.groovy"
                }
            }
        }
        stage('Setup Params') {  
            steps {
               script {
                    env_params.addInventoryParamsUptoHost()
                    myscripts.setupParams()
               }
            }
        }
         stage('Show Conent') {
            steps {
                script{
                    myscripts.showContent()
                }
            }
        }
        // stage('Approval') {
        //     steps {
        //         timeout(time: 5, unit: 'MINUTES') {
        //             input "Do you approve the copy of file to $host_name @ path $target_file_path?"
        //         }
        //     }
        // }
        stage('copy file') {
            steps {
                script{
                    myscripts.copyFile()
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

