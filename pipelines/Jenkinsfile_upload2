pipeline {
    agent any
    parameters {
        base64File 'file'
        string(name: 'target_file_name')
    }
    
    stages {
        stage('Example') {
            steps {
                withFileParameter('small') {
                    sh """
                        cp $file $target_file_name
                        cat $target_file_name
                    """
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}