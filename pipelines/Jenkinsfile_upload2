pipeline {
    agent any
    parameters {
        base64File 'file'
        string(name: 'target_file_name')
        string(name: 'host_name')
    }
    environment {
        ANSIBLE_VALUT= credentials('MID_ANSIBLE_VAULT')
    }
    stages {
        stage('Decrypt Private Key') {  
            steps {
                sh """
                    set +x
                    echo $ANSIBLE_VALUT > .mysecret
                    export ANSIBLE_VAULT_PASSWORD_FILE=.mysecret
                    ansible-vault decrypt the-key
                    echo "removed the key" > .mysecret
                """
            }
        }
        stage('Show Conent') {
            steps {
                withFileParameter('file') {
                    sh """
                        cat $file
                    """
                }
            }
        }
        stage('Approval') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    input "Do you approve the copy of file to  $host_name:$target_file_name?"
                }
            }
        }
        stage('copy file') {
            steps {
                withFileParameter('file') {
                    sh """
                        scp -o 'StrictHostKeyChecking no' -i the-key $file $host_name:$target_file_name
                        echo "Copy is successful!"
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}