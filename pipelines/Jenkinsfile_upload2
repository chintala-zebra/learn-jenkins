pipeline {
    agent any
    parameters {
        base64File('file', description: 'Please select the file you want to copy.')
        string(name: 'target_file_path', description: 'Path to where the file needs copied - Must Include the file name')
        string(name: 'host_name', description: 'Host to which the file Needs Copied'))
    }
    environment {
        ANSIBLE_VALUT= credentials('MID_ANSIBLE_VAULT')
    }
    stages {
        stage('Decrypt Private Key') {  
            steps {
                sh """
                    set +x
                    echo $ANSIBLE_VALUT > .mysecret
                    export ANSIBLE_VAULT_PASSWORD_FILE=.mysecret
                    ansible-vault decrypt the-key
                    echo "removed the key" > .mysecret
                """
            }
        }
        stage('Show Conent') {
            steps {
                withFileParameter('file') {
                    sh """
                        set +x
                        echo "The file content that you are going to copy is : "
                        cat $file
                    """
                }
            }
        }
        stage('Approval') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    input "Do you approve the copy of file to $host_name @ Path$target_file_path?"
                }
            }
        }
        stage('copy file') {
            steps {
                withFileParameter('file') {
                    sh """
                        set +x
                        scp -o 'StrictHostKeyChecking no' -i the-key $file $host_name:$target_file_path
                        echo "Copy of file to Host : $host_name @ Path : $target_file_path is successful!"
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

