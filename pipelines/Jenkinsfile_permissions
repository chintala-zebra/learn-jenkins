properties([
    parameters([
        choice(
            name: 'ENV',
            choices: [
                '',
                'dev',
                'prod'
            ]
        ),
        [
            name: 'Single',
            $class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            script: [
                $class: 'GroovyScript',
                script: [
                    script: '''
                    def build = Thread.currentThread().toString()
                    echo build
                    return [':selected','Single 1', 'Single 2']
                    ''',
                    sandbox: 'true',
                    classpath: []
                ]
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Print the Values') {
            steps {
                echo "Environment: ${params.ENV}"
                echo "Choice: ${params.Single}"
            }
        }
    }
}